<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowActionBarOverlay">false</item>
        <!-- FAB Color -->
        <item name="fab_colorNormal">@color/colorAccent</item>
        <item name="fab_colorPressed">@color/colorAccent</item>
        <item name="menu_colorNormal">@color/colorAccent</item>
        <item name="menu_colorPressed">@color/colorAccent</item>

    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Dark theme. -->
    <style name="DarkTheme" parent="Theme.AppCompat.NoActionBar" >
        <item name="colorAccent">@color/colorCardViewBlue</item>
        <!-- FAB Color -->
        <item name="fab_colorNormal">@color/colorCardViewBlue</item>
        <item name="fab_colorPressed">@color/colorCardViewBlue</item>
        <item name="menu_colorNormal">@color/colorCardViewBlue</item>
        <item name="menu_colorPressed">@color/colorCardViewBlue</item>

    </style>

</resources>

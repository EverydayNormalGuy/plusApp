<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="1dp"
    card_view:cardElevation="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="com.eugene.fithealth.TestingForSO">


        <ImageView
            android:id="@+id/cvImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:orientation="vertical"
            android:scaleType="centerCrop"
            android:src="@drawable/cast_album_art_placeholder" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_above="@+id/tvDescription"
            android:background="#50000000"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingLeft="16dp"
            android:textColor="#fff"
            android:textSize="22sp" />


        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cvImage"
            android:layout_marginBottom="8dp"
            android:maxLines="2"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="16dp"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnDelete"
            style="?android:buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvDescription"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="4dp"
            android:text="@string/delete"
            android:textColor="@android:color/holo_orange_dark" />

        <Button
            android:id="@+id/btnEdit"
            style="?android:buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvDescription"
            android:layout_toRightOf="@id/btnDelete"
            android:text="@string/edit_cardview"
            android:textColor="#03A9F4" />

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:background="#50000000"
            android:text=""
            android:textColor="#fff" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tvCounter"
            android:layout_marginBottom="10dp"
            android:layout_toEndOf="@+id/tvCounter"
            android:gravity="center"
            android:src="@drawable/ic_eye" />

        <TextView
            android:id="@+id/tvCounter"
            style="?android:buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#03A9F4"
            tools:background="#ffffff"
            android:layout_below="@+id/tvDescription"
            android:layout_toEndOf="@+id/ibShare" />

        <ImageButton
            style="?android:buttonBarButtonStyle"
            android:id="@+id/ibShare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:selectableItemBackground"
            android:src="@drawable/ic_menu_share_blue"
            android:layout_below="@+id/tvDescription"
            android:layout_toEndOf="@+id/btnEdit" />

    </RelativeLayout>


</android.support.v7.widget.CardView>